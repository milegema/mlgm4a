<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ime.MlgmImeView">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello!" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="this is" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MLGM Input Box" />

    <Button
        android:id="@+id/button_input_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name" />

    <Button
        android:id="@+id/button_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password" />

    <Button
        android:id="@+id/button_back_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back-space" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings" />


</LinearLayout>